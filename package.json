{
  "name": "vontogy-pages",
  "version": "1.0.0",
  "private": true,
  "description": "Vontogy Pages - Affiliate Marketing Platform",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "dev:all": "npm-run-all --parallel dev:frontend dev:backend",
    "build": "npm run build -w frontend && npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "start": "npm run start -w backend",
    "check": "npm run check -w frontend && npm run check -w backend",
    "clean": "rimraf frontend/dist backend/dist node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
